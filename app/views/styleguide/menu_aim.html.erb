          <a href="#">Menu Item ></a>
          <ul>
            <%- (1..5).each do |i| -%>
              <li><a href="#">Submenu Item</a></li>
            <%- end -%>
          </ul>
        </li>
      <%- end -%>
    </ul>
  </div>

</div>